<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".WelcomeActivity">

    <ImageView
        android:layout_width="100dp"
        android:id="@+id/logo"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true" />

    <Button
            android:id="@+id/sign_in_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sign_in_button_text"
            style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/welcome_appname"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="77dp"
        android:layout_marginTop="92dp" />

    <Button
        android:id="@+id/explore_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/explore_button_text"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/sign_in_button"
        android:layout_alignStart="@+id/sign_in_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:id="@+id/welcome_appname"
        android:text="@string/app_name"
        style="@style/WelcomeScreenHeaderTextStyle"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:id="@+id/welcome_moto"
        android:text="@string/motto"
        style="@style/WelcomeScreenMottoTextStyle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>